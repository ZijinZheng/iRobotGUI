<Window x:Class="iRobotGUI.IfWindow"
        xmlns:Controls="clr-namespace:iRobotGUI.Controls"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="IfWindow" Height="478" Width="638">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Controls:InstructionPanel Grid.Row="0" Grid.Column="0"/>

        <Controls:ConditionPanel x:Name="conditionPanel" Grid.Row="0" Grid.Column="1" />

        <Label Content="True" Grid.Column="1" HorizontalAlignment="Left" Margin="0,85,0,0" VerticalAlignment="Top"/>
        <Label Content="False" Grid.Column="1" HorizontalAlignment="Left" Margin="205,85,0,0" VerticalAlignment="Top"/>
        <Controls:ProgramList x:Name="programListIfBody" Grid.Row="0" Grid.Column="1" Margin="0,112,0,0" HorizontalAlignment="Left" Width="200" />
        <Controls:ProgramList x:Name="programListElseBody" Grid.Row="0" Grid.Column="1" Margin="205,112,0,0" HorizontalAlignment="Left" Width="200" />


    </Grid>
</Window>
