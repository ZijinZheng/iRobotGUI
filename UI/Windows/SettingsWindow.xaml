<Window x:Class="iRobotGUI.SettingsWindow"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:p="clr-namespace:iRobotGUI.Properties" 
		
		Title="SettingsWindow" Height="300" Width="468">
	<Grid Margin="40,0">
		<Grid.RowDefinitions>
			<RowDefinition/>
		</Grid.RowDefinitions>

		<StackPanel Margin="10">
			<StackPanel.Resources>
			</StackPanel.Resources>
			<CheckBox Content="Show C file after translation" HorizontalAlignment="Left"  VerticalAlignment="Center" Grid.Column="1"
				  IsChecked="{Binding Source={x:Static p:Settings.Default}, Path=OpenCCode, Mode=TwoWay}" />
			<DockPanel Margin="0,10,0,0">
				<TextBlock Text="Emulator Path" Width="80" VerticalAlignment="Center" />
				<Button x:Name="buttonBrowse" Content="..." DockPanel.Dock="Right" Width="30" Click="buttonBrowse_Click" />
				<TextBox x:Name="textBoxEmulatorPath" TextWrapping="Wrap" Text="{Binding Source={x:Static p:Settings.Default}, Path=EmulatorPath, Mode=TwoWay}" />
			</DockPanel>

		</StackPanel>

	</Grid>
</Window>
