<UserControl x:Class="iRobotGUI.Controls.InstructionPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" Width="210" Height="450">
    <UserControl.Resources>
        <Style TargetType="Image">
            <Setter Property="Width" Value="45" />
            <Setter Property="Height" Value="45" />
            <Setter Property="Stretch" Value="Fill" />
            <Setter Property="HorizontalAlignment" Value="Left" />
            <Setter Property="VerticalAlignment" Value="Top" />
            <Setter Property="RenderOptions.BitmapScalingMode" Value="HighQuality" />
            <Setter Property="ToolTipService.ShowDuration" Value="100000" />
            <EventSetter Event="MouseDown" Handler="MouseMove_General" />
        </Style>

        <Style x:Key="LabelStyle" TargetType="Label">
            <Setter Property="HorizontalAlignment" Value="Left" />
            <Setter Property="VerticalAlignment" Value="Top" />
        </Style>
    </UserControl.Resources>
    <Grid Grid.Row="1" Grid.Column="0">

        <Label Content="Navigation"    Style="{StaticResource LabelStyle}" Margin="27,10,0,0"   />
        <Label Content="LED and Sound" Style="{StaticResource LabelStyle}" Margin="30,140,0,0"  />
        <Label Content="Demo"          Style="{StaticResource LabelStyle}" Margin="155,140,0,0" />
        <Label Content="Logic"         Style="{StaticResource LabelStyle}" Margin="30,236,0,0" />

        <Image Source="pic/forward.png"  Tag="FORWARD"  Margin="81,36,0,0"   />
        <Image Source="pic/backward.png" Tag="BACKWARD" Margin="81,81,0,0"   />
        <Image Source="pic/left.png"     Tag="LEFT"     Margin="31,62,0,0"   />
        <Image Source="pic/right.png"    Tag="RIGHT"    Margin="131,62,0,0"  />
        <Image Source="pic/led.jpg"      Tag="LED"      Margin="31,171,0,0"  ToolTip="LED" />
        <Image Source="pic/song.png"     Tag="SONG_DEF" Margin="81,171,0,0"  ToolTip="Define a song" />
        <Image Source="pic/demo.jpg"     Tag="DEMO"     Margin="155,171,0,0" ToolTip="Play a demo" />
        <Image Source="pic/if.png"       Tag="IF"       Margin="31,267,0,0"  ToolTip="If"  />
        <Image Source="pic/loop.png"     Tag="LOOP"     Margin="81,267,0,0"  ToolTip="Loop" />
    </Grid>
</UserControl>
