<Window
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"  
    x:Class="iRobotPrototypeWpf.MainWindow"
    xmlns:System="clr-namespace:System;assembly=mscorlib"
    
    xmlns:custom="clr-namespace:iRobotPrototypeWpf"
    
    Title="iRobot GUI Controller" Height="452.221" Width="875.794">

    <Window.CommandBindings>
        <CommandBinding Command="ApplicationCommands.Open"
                        Executed="OpenCmdExecuted"/>
        <CommandBinding Command="ApplicationCommands.Save" 
                        Executed="SaveCmdExecuted"/>
        <CommandBinding Command="{x:Static custom:MainWindow.ComPortCmd}"
                    Executed="ConfigCmdExecuted"
                    CanExecute="ConfigCmdCanExecute"/>
    </Window.CommandBindings>

    <Window.InputBindings>
        <KeyBinding Gesture="Ctrl+Shift+C" Command="{x:Static custom:MainWindow.ComPortCmd}"></KeyBinding>

    </Window.InputBindings>

    <Grid Margin="0,0,0,0">

        <Menu VerticalAlignment="Top" Grid.ColumnSpan="2">
            <MenuItem Header="_File">
                <MenuItem Command="ApplicationCommands.New" />
                <MenuItem Command="ApplicationCommands.Save" />
                <MenuItem Command="ApplicationCommands.Open" />
                <Separator/>
                <MenuItem Command="ApplicationCommands.Close"/>

            </MenuItem>
            <MenuItem Header="Edit">
                <MenuItem Header="Cut" Command="Cut"/>
                <MenuItem Header="Copy"  />
                <MenuItem Header="Paste" />
            </MenuItem>
            <MenuItem Header="Build">
                <MenuItem Header="Translate to C" Click="MenuItemTranslate_Click"/>
                <MenuItem Header="Build" Click="MenuItemBuild_Click"/>
                <MenuItem Header="Clean" Click="MenuItemClean_Click" />

                <MenuItem Header="Show C Code" Click="MenuItem_ShowCCode"/>
                <MenuItem Header="Load" Click="MenuItemLoad_Click"/>
                <MenuItem Header="Build and Load" Click="BuildAndLoad"/>
                <Separator/>
                <MenuItem Command="{x:Static custom:MainWindow.ComPortCmd}" InputGestureText="Ctrl+Shift+C"/>

            </MenuItem>
            <MenuItem Header="Help">
                <MenuItem Header="About"/>
            </MenuItem>
        </Menu>
        <Image Source="pic/forward.png" MouseMove="MouseMove_General"  Margin="103,69,0,0" Width="45" Height="45" HorizontalAlignment="Left" VerticalAlignment="Top" Tag="FORWARD"  />
        <Image Source="pic/backward.png" MouseMove="MouseMove_General"  Margin="103,137,0,0" Width="45" Height="45" HorizontalAlignment="Left" VerticalAlignment="Top"  />
        <Image Source="pic/left.png"  MouseMove="MouseMove_General"  Margin="35,105,0,0"  Width="45" Height="45" HorizontalAlignment="Left" VerticalAlignment="Top" Tag="LEFT"  />
        <Image Source="pic/right.png"  MouseMove="MouseMove_General" Margin="165,105,0,0" Width="45" Height="45" HorizontalAlignment="Left" VerticalAlignment="Top" />



        <ListBox x:Name="listbox" HorizontalAlignment="Left" Margin="263,25,0,10" Width="205" DragEnter="ListBox_DragEnter" Drop="ListBox_Drop" AllowDrop="True" SelectionChanged="listbox_SelectionChanged"/>
        <GroupBox Header="Parameters" HorizontalAlignment="Left" Margin="473,25,0,10" Width="133">
            <StackPanel x:Name="RootPanel" Margin="0,0,0,0">

                <StackPanel x:Name="ForwardPanel" Margin="0,0,0,0" VerticalAlignment="Top" Visibility="Collapsed">
                    <Label Content="Distance (millimeter)"/>
                    <TextBox x:Name="textBoxDistance" Height="23" TextWrapping="Wrap" Text="500" PreviewTextInput="number_validation" TextChanged="textBoxDistance_TextChanged"/>
                    <Label Content="Time (second)"/>
                    <TextBox x:Name="textBoxTime" Height="23" TextWrapping="Wrap" Text="3" PreviewTextInput="number_validation" TextChanged="textBoxTime_TextChanged" />
                </StackPanel>

                <StackPanel x:Name="RotatePanel" Margin="0,0,0,0" VerticalAlignment="Top" Visibility="Collapsed">
                    <Label Content="Angle (degree)"/>
                    <TextBox x:Name="textBoxAngle" Height="23" TextWrapping="Wrap" Text="90" TextChanged="textBoxAngle_TextChanged"/>
                </StackPanel>
                <StackPanel x:Name="LEDPanel" Margin="0,0,0,0" VerticalAlignment="Top" Visibility="Collapsed">
                    <Label Content="Power LED Color"/>
                    <Slider Name="ColorSlider" Grid.Column="1" Minimum="0" Maximum="255" ValueChanged="ColorSliderChanged" Value="255"/>
                    <Canvas Name="ColorCanvas" Width="120"   Height="40">
                        <Rectangle   Width="100"   Height="20"    Fill="Orange" Name="rectang" />
                    </Canvas>
                    <TextBox x:Name="Color_val" Height="23" TextWrapping="Wrap" Text="255"/>
                    <Label Content="Power LED Brightness"/>
                    <Slider Name="BrightSlider" Grid.Column="1" Minimum="0" Maximum="255" ValueChanged="BrightSliderChanged" Value="255"/>
                    <TextBox x:Name="brightness_val" Height="23" TextWrapping="Wrap" Text="255"/>
                    <StackPanel Orientation="Horizontal">
                        <StackPanel Orientation="Vertical">
                            <Label Content="LED1"/>
                            <CheckBox x:Name="led1" Checked="led_check_handler" Unchecked="led_uncheck_handler"/>
                        </StackPanel>
                        <StackPanel Orientation="Vertical">
                            <Label Content="LED2"/>
                            <CheckBox x:Name="led2" Checked="led_check_handler" Unchecked="led_uncheck_handler"/>
                        </StackPanel>

                    </StackPanel>
                </StackPanel>
            </StackPanel>



        </GroupBox>
        <Label Content="Navigation" HorizontalAlignment="Left" Margin="35,52,0,0" VerticalAlignment="Top"/>
        <Label Content="Sensor" HorizontalAlignment="Left" Margin="35,167,0,0" VerticalAlignment="Top"/>
        <Image Source="pic/bump.jpg" RenderOptions.BitmapScalingMode="HighQuality" HorizontalAlignment="Left" Margin="35,198,0,0" VerticalAlignment="Top" Width="75"  />
        <Image Source="pic/cliff.jpg" RenderOptions.BitmapScalingMode="HighQuality" HorizontalAlignment="Left" Margin="141,198,0,0" VerticalAlignment="Top" Width="75" />
        <Label Content="LED and Sound" HorizontalAlignment="Left" Margin="35,284,0,0" VerticalAlignment="Top"/>
        <Image Source="pic/led.jpg" RenderOptions.BitmapScalingMode="HighQuality" HorizontalAlignment="Left" Margin="35,315,0,0" VerticalAlignment="Top" Width="75" MouseMove="MouseMove_General" Tag="LED"  />
        <Image Source="pic/song.png" RenderOptions.BitmapScalingMode="HighQuality"  HorizontalAlignment="Left" Margin="141,315,0,0" VerticalAlignment="Top" Width="75" MouseMove="MouseMove_General" Tag="SONG_DEF" />

        <Grid Margin="623,25,10,10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="28"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Label Content="Debugging info" HorizontalAlignment="Left" VerticalAlignment="Top" Height="26" Width="93"/>
            <Button Content="Load Example Code" HorizontalAlignment="Left" VerticalAlignment="Top" Click="ButtonLoadExampleCode_Click" Grid.Row="1" Height="20" Width="108" />

            <Button Content="Song" HorizontalAlignment="Left" VerticalAlignment="Top" Click="ButtonSong_Click" Grid.Row="1" Height="20" Margin="113,0,0,0" />
            <TextBox x:Name="textBoxCode" TextWrapping="Wrap" Text="Source Code"  Grid.Row="2" />

        </Grid>


    </Grid>
</Window>
